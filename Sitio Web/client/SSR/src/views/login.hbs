<link href="css/login.css" rel="stylesheet">
<div class="container w-75 mt-5 rounded-3 shadow">
    <div class="row align-items-stretch">
        <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6">

        </div>
        <div class="col bg-der p-5 rounded-3">
            <div class="text-end">
                <img
                    src="/img/logo2.png"
                    width="70px"
                    alt="LogoUleam"
                />
            </div>

            <h2 class="fw-bold text-center py-5">Bienvenido de vuelta</h2>

            <form
                class="custom-form"
                method="post"
                action="login"
                id="caja-login"
                name="formLogin"
            >
                <div class="mb-4">
                    <label for="user" class="form-label">Nombre de
                        usuario</label>
                    <input
                        class="form-control"
                        type="text"
                        id="user"
                        name="user"
                        minlength=4
                        required
                        placeholder="Ingrese su usuario">
                    <span id="c-error" aria-live="assertive"></span>
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label">Contraseña</label>
                    <input
                        type="password"
                        name="password"
                        minlength=4
                        class="form-control"
                        required
                        id="password"
                        placeholder="Ingrese su contraseña"
                    >
                    <span id="p-error" aria-live="assertive"></span>
                </div>
                <!-- gap-2 col-6 mx-auto -->
                <div class="d-grid pt-3">
                    <button
                        type="submit"
                        class="btn btn-primary"
                    >Iniciar Sesión
                    </button>
                </div>
                <span id="s-error" aria-live="assertive"></span>
                <div class="my-3 text-center">
                    <span>¿No tienes una cuenta? <a
                        class="ur"
                        href="register"> Regístrate aquí</a>
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/login.js"></script>
